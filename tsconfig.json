{
    "compilerOptions": {
        "target": "ES2020",
        "module": "node18",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "outDir": "./dist",
        "rootDir": "./src"
    },
    "include": ["src", "demo"],
    "exclude": ["node_modules", "dist"]
}
